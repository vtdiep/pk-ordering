{
  "version": "2.0.0",
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": false,
    "panel": "new",
    "showReuseMessage": true
  },
  "tasks": [
    {
      "label": "Create terminals",
      "dependsOn": [
        "Back",
        "Back Debug",
        "Front Start",
        "Front"
      ],
      // Mark as the default build task so cmd/ctrl+shift+b will create them
      "group": {
        "kind": "build",
        "isDefault": true
      },
      // Try start the task on folder open
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      // The name that shows up in terminal tab
      "label": "Back",
      // The task will launch a shell
      "type": "shell",
      "command": "cd src && bash.exe",
      // Mark as a background task to avoid the spinner animation on the terminal tab
      "isBackground": true,
      // Create the tasks in a terminal group
      "presentation": {
        "group": "back"
      },
    },
    {
      "label": "Back Debug",
      "type": "shell",
      "command": "npm run start:debug",
      "isBackground": true,
      "presentation": {
        "group": "back debug",
      }
    },
    {
      "label": "Front Start",
      "type": "shell",
      "command": "cd client && npm run start",
      "isBackground": true,
      "presentation": {
        "group": "front start",
      },
    },
    {
      "label": "Front",
      "type": "shell",
      "command": "cd client && bash.exe",
      "isBackground": true,
      "presentation": {
        "group": "front",
      },
    },
  ]
}