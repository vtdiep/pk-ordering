{
  "displayName": "UnitTests [Parallel]",
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],

  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  },
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "collectCoverage": true,
  "coverageProvider": "babel",
  "coverageReporters": ["json", "lcov", "text"],
  "coverageDirectory": "../coverage/unit",
  "testEnvironment": "node"
}